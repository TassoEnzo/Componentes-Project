{
  "name": "livraria-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    
    "backend:start": "start cmd /c \"cd ../livraria && start-backend.bat\"",
    "backend:stop": "taskkill /F /IM java.exe",
    "dev:full": "npm run backend:start && timeout /t 10 && npm run dev",
    "dev:concurrent": "concurrently \"npm run backend:start\" \"timeout /t 15 && npm run dev\" --kill-others-on-fail -n \"BACKEND,VUE\" -c \"bgBlue.bold,bgGreen.bold\""
  },
  "dependencies": {
    "axios": "^1.13.2",
    "pinia": "^3.0.4",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.1",
    "vite": "^7.2.4"
  }
}
